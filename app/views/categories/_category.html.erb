<li class="category">
  <b><p><%= category.category_name %></b></p>
  <div class="form-group">
    <%= form_for [category, Lesson.new] do |f| %>
      <%= f.hidden_field :category_id, value: category.id %>
      <%= f.submit t(:start_a_lesson), class: "btn btn-primary" %>
    <% end %>
  </div>
</li>
