<div class="answer_fields">
  <div class="form-group">
    <div class="col-sm-8 div1">
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="col-sm-2 div2">
      <%= f.check_box :is_correct %>
    </div>
    <div class="col-sm-2 div3">
      <%= link_to_remove_fields t(:remove), f %>
    </div>
  </div>
</div>
